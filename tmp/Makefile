NAME = rush-02

SRC = *.c

all: $(NAME)
	
$(NAME):
	gcc -Wall -Wextra -Werror -o $(NAME) $(SRC)
clean:
	/bin/rm -f *.o
fclean:
	/bin/rm -f *.o $(NAME)
